<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="39dp"
        android:text="Code: " />

    <TextView
        android:id="@+id/code_tv"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="30dp"
        android:text="" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/code_tv"
        android:layout_alignStart="@+id/code_tv"
        android:layout_below="@+id/code_tv"
        android:layout_marginTop="25dp"
        android:text="Confirm Code:" />

    <EditText
        android:id="@+id/code_et"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:digits="0123456789"
        android:inputType="number" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/code_et"
        android:layout_alignStart="@+id/code_et"
        android:layout_below="@+id/code_et"
        android:layout_marginTop="56dp"
        android:text="CONFIRM" />
</RelativeLayout>